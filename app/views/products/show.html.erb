

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <p id="notice"><%= notice %></p>
      <p>
        <strong>Name:
        <%= @product.name %></strong>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>

      <p>
        <%=image_tag(@product.image_url, class: "img-responsive") %>
      </p>

      <p>
        <strong>Colour:</strong>
        <%= @product.colour %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= number_to_currency(@product.price) %>
      </p>

      <p>
        <strong>Highest Rating:</strong>
        <%= @product.highest_rating_comment.try(:rating) %>
      </p>
      <p>
        <strong>Lowest Rating:</strong>
        <%= @product.lowest_rating_comment.try(:rating) %>
      </p>

      <p>Average Rating:
        <div class="rated" data-score="<%= @product.average_rating %>">
        </div>
      </p>

      <%= render 'new_comment' %>
      <%= render 'comments' %>




        <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-default btn-sm" %> |
        <%= link_to 'Back', products_path, class: "btn btn-default btn-sm" %>
    </div>
 </div>
</div>
